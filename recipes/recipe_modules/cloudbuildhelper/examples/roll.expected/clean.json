[
  {
    "cmd": [
      "python",
      "-u",
      "RECIPE_MODULE[depot_tools::git]/resources/git_setup.py",
      "--path",
      "[CACHE]/roll",
      "--url",
      "https://repo.example.com"
    ],
    "name": "git setup"
  },
  {
    "cmd": [
      "git",
      "fetch",
      "origin",
      "master",
      "--progress"
    ],
    "cwd": "[CACHE]/roll",
    "env": {
      "PATH": "RECIPE_REPO[depot_tools]:<PATH>"
    },
    "infra_step": true,
    "name": "git fetch"
  },
  {
    "cmd": [
      "git",
      "checkout",
      "-f",
      "FETCH_HEAD"
    ],
    "cwd": "[CACHE]/roll",
    "infra_step": true,
    "name": "git checkout"
  },
  {
    "cmd": [
      "git",
      "rev-parse",
      "HEAD"
    ],
    "cwd": "[CACHE]/roll",
    "infra_step": true,
    "name": "read revision",
    "~followup_annotations": [
      "@@@STEP_TEXT@<br/>checked out 'deadbeef'<br/>@@@"
    ]
  },
  {
    "cmd": [
      "git",
      "clean",
      "-f",
      "-d",
      "-x"
    ],
    "cwd": "[CACHE]/roll",
    "infra_step": true,
    "name": "git clean"
  },
  {
    "cmd": [
      "git",
      "branch",
      "-D",
      "roll-attempt"
    ],
    "cwd": "[CACHE]/roll",
    "infra_step": true,
    "name": "git branch"
  },
  {
    "cmd": [
      "git",
      "checkout",
      "-t",
      "origin/master",
      "-b",
      "roll-attempt"
    ],
    "cwd": "[CACHE]/roll",
    "infra_step": true,
    "name": "git checkout (2)"
  },
  {
    "cmd": [
      "git",
      "add",
      "."
    ],
    "cwd": "[CACHE]/roll",
    "infra_step": true,
    "name": "git add"
  },
  {
    "cmd": [
      "git",
      "diff",
      "--cached",
      "--exit-code"
    ],
    "cwd": "[CACHE]/roll",
    "infra_step": true,
    "name": "git diff"
  },
  {
    "name": "$result"
  }
]